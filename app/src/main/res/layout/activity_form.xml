<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    tools:context=".activity.FormActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form_layout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/create_event_toolbar"
            layout="@layout/toolbar_layout_white" />

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_event_toolbar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/personal_information"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_event_toolbar" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:text="wang" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/age_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="@+id/name_input_layout"
            app:layout_constraintStart_toStartOf="@+id/name_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/name_input_layout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/age"
                android:inputType="number"
                android:text="24" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/retirement_age_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="@+id/age_input_layout"
            app:layout_constraintStart_toStartOf="@+id/age_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/age_input_layout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/expected_retirement_age"
                android:inputType="number"
                android:text="55" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/expectancy_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="@+id/retirement_age_input_layout"
            app:layout_constraintStart_toStartOf="@+id/retirement_age_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/retirement_age_input_layout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/expectancy"
                android:inputType="number"
                android:text="85" />
        </android.support.design.widget.TextInputLayout>

        <co.ceryle.segmentedbutton.SegmentedButtonGroup
            android:id="@+id/employment_status_segmented_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/expectancy_input_layout"
            app:layout_constraintStart_toStartOf="@+id/expectancy_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/expectancy_input_layout"
            app:sbg_animateSelector="linearOutSlowIn"
            app:sbg_animateSelectorDuration="1000"
            app:sbg_backgroundColor="@color/white"
            app:sbg_borderColor="@color/form_color"
            app:sbg_borderSize="1dp"
            app:sbg_radius="2dp"
            app:sbg_selectorColor="@color/form_color">

            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                app:sb_rippleColor="@color/colorPrimary"
                app:sb_text="@string/self_employed"
                app:sb_textColor="@color/form_color"
                app:sb_textColor_onSelection="@color/white" />

            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                app:sb_rippleColor="@color/colorPrimary"
                app:sb_text="@string/employed"
                app:sb_textColor="@color/form_color"
                app:sb_textColor_onSelection="@color/white" />

        </co.ceryle.segmentedbutton.SegmentedButtonGroup>

        <co.ceryle.segmentedbutton.SegmentedButtonGroup
            android:id="@+id/citizenship_segmented_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/employment_status_segmented_button"
            app:layout_constraintStart_toStartOf="@+id/employment_status_segmented_button"
            app:layout_constraintTop_toBottomOf="@+id/employment_status_segmented_button"
            app:sbg_animateSelector="linearOutSlowIn"
            app:sbg_animateSelectorDuration="1000"
            app:sbg_backgroundColor="@color/white"
            app:sbg_borderColor="@color/form_color"
            app:sbg_borderSize="1dp"
            app:sbg_radius="2dp"
            app:sbg_selectorColor="@color/form_color">

            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                app:sb_rippleColor="@color/colorPrimary"
                app:sb_text="@string/singaporean"
                app:sb_textColor="@color/form_color"
                app:sb_textColor_onSelection="@color/white" />

            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                app:sb_rippleColor="@color/colorPrimary"
                app:sb_text="@string/foreigner_or_pr"
                app:sb_textColor="@color/form_color"
                app:sb_textColor_onSelection="@color/white" />

        </co.ceryle.segmentedbutton.SegmentedButtonGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/financial_information"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/citizenship_segmented_button" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/gross_monthly_income_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="@+id/retirement_age_input_layout"
            app:layout_constraintStart_toStartOf="@+id/retirement_age_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gross_monthly_income"
                android:inputType="numberDecimal"
                android:text="2800" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fixed_expenses_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="@+id/gross_monthly_income_input_layout"
            app:layout_constraintStart_toStartOf="@+id/gross_monthly_income_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/gross_monthly_income_input_layout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fixed_expenses"
                android:inputType="numberDecimal"
                android:text="1000" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/variable_expenses_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="@+id/fixed_expenses_input_layout"
            app:layout_constraintStart_toStartOf="@+id/fixed_expenses_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/fixed_expenses_input_layout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/variable_expenses"
                android:inputType="numberDecimal"
                android:text="850" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/current_assets_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/form_color"
            app:layout_constraintEnd_toEndOf="@+id/variable_expenses_input_layout"
            app:layout_constraintStart_toStartOf="@+id/variable_expenses_input_layout"
            app:layout_constraintTop_toBottomOf="@+id/variable_expenses_input_layout">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/current_assets"
                android:inputType="numberDecimal"
                android:text="10000" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/compute_button"
            android:layout_width="match_parent"
            style="@style/form_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/compute_button"
            android:text="@string/graph_forecast"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_assets_input_layout"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>