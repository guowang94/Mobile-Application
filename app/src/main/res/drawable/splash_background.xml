<?xml version="1.0" encoding="utf-8"?><!--<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">--><!--<gradient android:angle="224.67" android:type="linear" android:startColor="#FFD0E4ED" android:endColor="#FF3270A5"/>--><!--<size android:height="1024dp" android:width="769dp"/>--><!--</shape>-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First part is a gradient -->
    <item
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="#FF0081E8"
                android:startColor="#FF8EDFF3" />

        </shape>
    </item>
    <!-- Second part is plain color. Slightly transparent -->
    <item
        android:bottom="0sp"
        android:top="1sp">
        <shape android:shape="rectangle">
            <!--the next line of code is something like alpha = 0.1-->
            <solid android:color="#20ffffff"/>
        </shape>

    </item>
</layer-list>