<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#2196F3</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--Toolbar title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--Toolbar option color-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <!--Toolbar title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--Toolbar option color-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="landing_screen_get_started">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="form_button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="nav_back">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="actionBar">
        <item name="android:background">@color/actionBar</item>
    </style>

    <style name="formActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="summaryActionBar">
        <item name="android:background">@color/summaryActionBar</item>
    </style>

    <style name="summary_screen_white_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="summary_screen_blue_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF35CEE4</item>
    </style>

    <style name="summary_screen_green_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF6DDDA4</item>
    </style>

    <style name="summary_screen_purple_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFA793E7</item>
    </style>

    <style name="summary_screen_horizontal_divider">
        <item name="android:color">#FFD8D8D8</item>
    </style>

    <style name="summary_screen_vertical_divider">
        <item name="android:color">#99FFFFFF</item>
    </style>

    <style name="list_row_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FF4A4A4A</item>
    </style>

    <style name="list_row_value">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF4A4A4A</item>
    </style>

    <style name="cpf_contribution_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="event_list_row_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

</resources>
