<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/formColor</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--Toolbar title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--Toolbar option color-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <!--Toolbar title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--Toolbar option color-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Design.TextInputLayout.textColorHint">
        <item name="android:textColorHint">@color/formColor</item>
    </style>

    <style name="landing_screen_get_started">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="form_button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="nav_back">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="summary_screen_white_text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="summary_screen_horizontal_divider">
        <item name="android:color">#FFD8D8D8</item>
    </style>

    <style name="summary_screen_vertical_divider">
        <item name="android:color">#99FFFFFF</item>
    </style>

    <style name="list_row_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FF4A4A4A</item>
    </style>

    <style name="list_row_value">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF4A4A4A</item>
    </style>

    <style name="cpf_contribution_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="event_list_row_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="input_layout_hint_color">
        <item name="android:textColor">@color/formColor</item>
    </style>

    <style name="inactive_input_layout_hint_color">
        <item name="android:textColor">#FF4A4A4A</item>
    </style>

    <style name="export_report_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF193628</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="export_timestamp">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF193628</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="export_header">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF193628</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="export_total_text">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FF193628</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="export_total_amount">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FF4A4A4A</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="export_title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FF193628</item>
    </style>

    <style name="export_value">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF193628</item>
    </style>

    <style name="export_plan_title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF193628</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="export_plan_value">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF757575</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="export_plan_type">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="export_milestone_name">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FF193628</item>
    </style>

</resources>
